<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup_element"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/quizback"
    android:layout_height="match_parent"
    android:layout_gravity="center">


    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="50dp"
        android:paddingTop="30dp"
        android:id="@+id/linearLayout">

        <EditText
            android:id="@+id/name"
            android:layout_width="fill_parent"

            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_person_24dp"
            android:drawableTint="#BC1C1C"
            android:singleLine="true"
            android:hint="नाम"
            android:inputType="text"
            android:textStyle="bold"/>



        <EditText
            android:id="@+id/phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_phone_24dp"
            android:drawableTint="#BC1C1C"
            android:singleLine="true"
            android:hint="मोबाइल नम्बर"
            android:textStyle="bold"
            android:inputType="number" />



        <EditText
            android:id="@+id/city"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_home_24dp"
            android:drawableTint="#BC1C1C"
            android:singleLine="true"
            android:hint="शहर"
            android:textStyle="bold"/>

    </LinearLayout>

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:src="@drawable/submitbutton"
        android:clickable="true"
        android:id="@+id/submit"/>




</RelativeLayout>