<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/quizback"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <RelativeLayout android:layout_height="wrap_content"
        android:layout_width="match_parent">
    <TextView
        android:id="@+id/question2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:text="When you think of the product type, which manufacturing company comes to your mind?"
        android:textColor="#BC1c1c"
        android:textSize="30dp"
        android:layout_margin="2dp"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_marginTop="10dp"
        android:id="@+id/radioGroup2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question2">

        <RadioButton
            android:layout_marginTop="10dp"
            android:id="@+id/quiz2option1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:checked="true"
            android:text="a. Hero MotoCorp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="15dp"
            android:background="#BC1C1C"/>

        <RadioButton
            android:layout_marginTop="10dp"
            android:id="@+id/quiz2option2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="b. Yamaha"
            android:textSize="15dp"
            android:textColor="#FFF"
            android:textStyle="bold"

            android:background="#BC1C1C"/>
        <RadioButton
            android:layout_marginTop="10dp"
            android:id="@+id/quiz2option3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="c. Honda"
            android:textSize="15dp"
            android:textColor="#FFF"
            android:textStyle="bold"

            android:background="#BC1C1C"/>

        <RadioButton
            android:layout_marginTop="10dp"
            android:id="@+id/quiz2option4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="d. TVS"
            android:textSize="15dp"
            android:textColor="#FFF"
            android:textStyle="bold"

            android:background="#BC1C1C"/>

        <RadioButton
            android:layout_marginTop="10dp"
            android:id="@+id/quiz2option5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="e. Bajaj"
            android:textSize="15dp"
            android:textColor="#FFF"
            android:textStyle="bold"

            android:background="#BC1C1C"/>

        <RadioButton
            android:layout_marginTop="10dp"
            android:id="@+id/quiz2option6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="f. Piaggio"
            android:textSize="15dp"
            android:textColor="#FFF"
            android:textStyle="bold"

            android:background="#BC1C1C"/>

        <RadioButton
            android:layout_marginTop="10dp"
            android:id="@+id/quiz2option7"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="g. Suzuki"
            android:textSize="15dp"
            android:textColor="#FFF"
            android:textStyle="bold"

            android:background="#BC1C1C"/>

        <RadioButton
            android:layout_marginTop="10dp"
            android:id="@+id/quiz2option8"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="h. Enfield"
            android:textSize="15dp"
            android:textColor="#FFF"
            android:textStyle="bold"

            android:background="#BC1C1C"/>

    </RadioGroup>


</RelativeLayout>
</LinearLayout>
    <ImageButton
        android:id="@+id/button2"
        android:layout_width="120dp"
        android:layout_height="120dp"
       android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/next1"
        android:gravity="center"
        android:onClick="btClick"
        android:text="Next" />
</LinearLayout>
</android.support.v4.widget.NestedScrollView>
