<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/quizback"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tiwarithetiger11gmail.quizapp.Survey1">
    <TextView
        android:id="@+id/question2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:text="Which one is your preference in Two Wheelers?"
        android:textColor="#BC1c1c"
        android:textSize="30dp"
        android:layout_margin="2dp"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_marginTop="10dp"
        android:id="@+id/radioGroup2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question2">

        <RadioButton
            android:id="@+id/quiz2option1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:checked="true"
            android:text="a. Motorcycles"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="15dp"
            android:background="#BC1C1C"/>

        <RadioButton
            android:layout_marginTop="10dp"
            android:id="@+id/quiz2option2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="b. Scooters"
            android:textSize="15dp"
            android:textColor="#FFF"
            android:textStyle="bold"

            android:background="#BC1C1C"/>



    </RadioGroup>

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/radioGroup1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:background="@drawable/next1"
        android:gravity="center"
        android:onClick="btClick"
        android:text="Next" />


</RelativeLayout>
