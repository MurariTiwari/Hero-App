<RelativeLayout xmlns:tools="http://schemas.android.com/tools"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/quizback"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".Popup3">


    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="50dp"
        android:paddingTop="30dp"
        android:id="@+id/linearLayout">

        <EditText
            android:id="@+id/name"
            android:layout_width="fill_parent"

            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_person_24dp"
            android:drawableTint="#BC1C1C"
            android:singleLine="true"
            android:hint="Name"
            android:inputType="text"
            android:textStyle="bold"/>



        <EditText
            android:id="@+id/age"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_person_24dp"
            android:drawableTint="#BC1C1C"
            android:singleLine="true"
            android:hint="Age"
            android:textStyle="bold"
            android:inputType="number" />

        <EditText
            android:id="@+id/prof"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_person_24dp"
            android:drawableTint="#BC1C1C"
            android:singleLine="true"
            android:hint="Profession"
            android:textStyle="bold"
            android:inputType="text" />



        <EditText
            android:id="@+id/city"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_home_24dp"
            android:drawableTint="#BC1C1C"
            android:singleLine="true"
            android:hint="City"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/locality"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_home_24dp"
            android:drawableTint="#BC1C1C"
            android:singleLine="true"
            android:hint="Locality"
            android:textStyle="bold"/>

    </LinearLayout>

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:src="@drawable/submitbutton"
        android:clickable="true"
        android:id="@+id/submit"/>




</RelativeLayout>